{
  "settings": {
    "analysis": {
      "filter": {
        "nGram_filter": {
          "type": "edge_ngram",
          "min_gram": 2,
          "max_gram": 20,
          "token_chars": ["letter", "digit", "punctuation", "symbol"]
        }
      },
      "analyzer": {
        "nGram_analyzer": {
          "type": "custom",
          "tokenizer": "whitespace",
          "filter": [ "lowercase", "asciifolding", "nGram_filter" ]
        },
        "whitespace_analyzer": {
          "type": "custom",
          "tokenizer": "whitespace",
          "filter": [ "lowercase", "asciifolding" ]
        },
        "keyword_analyzer": {
          "type": "custom",
          "tokenizer": "keyword",
          "filter": [ "lowercase" ]
        }
      }
    }
  },
  "mappings": {
    "Processo": {
      "_all": {
          "index_analyzer": "nGram_analyzer",
          "search_analyzer": "whitespace_analyzer"
      },
      "dynamic": false,
      "properties": {
        "id": {
          "properties": {
            "sequencial": {
              "type": "long",
          	  "index": "not_analyzed"              
            }
          }
        },
        "classe": {
          "properties": {
            "sigla": {
              "type": "string",
              "index": "not_analyzed"
            }
          }
        },        
        "numero": {        
          "type": "long",
          "index": "not_analyzed"
        }, 
        "identificacao": {
          "type": "string",
          "analyzer": "keyword_analyzer"
        },
        "relator": {
          "properties": {
            "codigo": {
              "type": "long",
              "index": "not_analyzed"
            }
          }
        },
        "partes": {
          "properties": {
          	"sequencial": {
          	  "type": "long",
              "index": "no"          	  
          	},
            "pessoaId": {
	          "properties": {
	            "sequencial": {
	              "type": "long",
	              "index": "not_analyzed"
	            }
	          }             
            },
            "polo": {
              "type": "string",
              "index": "not_analyzed"
            }
          }
        },
        "pecas": {
          "properties": {
          	"documentoId": {
              "properties": {
		        "sequencial": {
		          "type": "long",
		          "index": "not_analyzed",
		          "include_in_all" : false
		        }
		      }
	        },
          	"tipo": {
          	  "properties": {
		        "sequencial": {
		          "type": "long",
		          "index": "not_analyzed",
		          "include_in_all" : false
		        }
		      }
	        },
	        "descricao": {
          	  "type": "string",
		      "analyzer": "whitespace_analyzer"
	        }
          }
        }
      }
    }
  }
}